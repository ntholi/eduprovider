<% content_for :section_nav do %>
<nav id="side-nav">
  <ul>
    <li id="nav-title">
      Tutored Courses
    </li>
    <li>
      <%= link_to 'Register new Course', new_tutored_course_path %>
    </li>
  </ul>
</nav>
<% end %>

<h1>Tutored Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutored_courses.each do |tutored_course| %>
    <tr>
      <td><%= link_to tutored_course.course, tutored_course.course %></td>
      <td><%= link_to "Students (#{tutored_course.student_enrollments.size})", students_path(tutored_course: tutored_course.id) %></td>
      <td><%= link_to 'Lessons', lessons_path(tutored_course: tutored_course.id) %></td>
      <td><%= link_to 'Unregister', tutored_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
