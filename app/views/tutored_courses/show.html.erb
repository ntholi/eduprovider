<p id="notice"><%= notice %></p>

<p>
  <strong>Tutor:</strong>
  <%= @tutored_course.tutor %>
</p>

<p>
  <strong>Course:</strong>
  <%= @tutored_course.course %>
</p>

<h2>Lessons</h2>

<% if @tutored_course.lessons %>
<table>
  <thead>
    <tr>
      <th>Tutored course</th>
      <th>Title</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutored_course.lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.tutored_course %></td>
      <td><%= lesson.title %></td>
      <td><%= lesson.summary %></td>
      <td><%= link_to 'Show', lesson %></td>
      <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
      <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
