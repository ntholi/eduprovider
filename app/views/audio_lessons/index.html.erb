<h1>Audio Lessons</h1>

<table class="table">
  <thead>
    <tr>
      <th>Lesson</th>
      <th>Audio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @audio_lessons.each do |audio_lesson| %>
      <tr>
        <td><%= audio_lesson.lesson %></td>
        <td><%= audio_lesson.audio %></td>
        <td><%= link_to 'Show', audio_lesson %></td>
        <td><%= link_to 'Edit', edit_audio_lesson_path(audio_lesson) %></td>
        <td><%= link_to 'Delete', audio_lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Audio Lesson', new_audio_lesson_path %>
