<%= bootstrap_form_for(user_profile, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>

<%= f.text_field :email %>
<%= f.text_field :first_name %>
<%= f.text_field :last_name %>
<%= f.date_select :date_of_birth, start_year: 1901 %>
<%= f.text_field :country %>
<%= f.text_field :city %>
<%= f.text_field :area_name %>
<%= f.text_field :phone_number %>
<%= f.form_group do %>
<%= f.submit %>
<% end %>
<% end %>
