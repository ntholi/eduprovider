<h1><%= @lessons.first.tutored_course if @lessons and @lessons.first %>
  Lessons</h1>
<br/>

<% if @lessons %>
<table class="table">
  <thead>
    <tr>
      <% if current_student %>
      <td></td>
      <% end %>
      <th>Title</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
    <tr>
      <td><%= image_tag(lesson.video_lesson.video.thumb) if lesson.video_lesson and current_student %></td>
      <td><%= lesson.title %></td>
      <td><%= lesson.summary %></td>
      <td><%= link_to 'Show', lesson %></td>
      <% if current_tutor %>
      <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
      <td><%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Lesson', new_lesson_path if current_tutor %>
