<% content_for :section_nav do %>
<nav id="side-nav">
  <ul>
    <li id="nav-title">
      Lessons
    </li>
    <% if current_tutor %>
    <li>
      <%= link_to 'New Lesson', new_lesson_path %>
    </li>
    <% end %>
  </ul>
</nav>
<% end %>

<h1><%= @lessons.first.tutored_course if @lessons and @lessons.first %>
  Lessons</h1>
<br/>

<% if @lessons %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
    <tr>
      <td><%= link_to "#{lesson.title.capitalize}", lesson_path(lesson) %></td>
      <td><%= lesson.summary %></td>
      <% if current_tutor %>
      <td><%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
