<%= bootstrap_form_for(question, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>

<%= f.text_field :title %>
<%= f.select(:privacy, Question.privacies.keys.map {|role| [role.titleize,role]}) %>
<%= f.text_area :content %>
<%= f.hidden_field :student_id %>
<%= f.hidden_field :lesson_id %>

<%= f.form_group do %>
<%= f.submit %>
<% end %>
<% end %>
